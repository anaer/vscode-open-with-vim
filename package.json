{
    "name": "vscode-open-with-vim",
    "displayName": "Open with Vi/Vim/Nano",
    "description": "Open files with Vi/Vim/Nano, in the editor area",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/babakks/vscode-open-with-vim"
    },
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "keywords": [
        "vi",
        "vim",
        "nano",
        "open",
        "editor",
        "terminal"
    ],
    "main": "./out/extension.js",
    "icon": "images/icon.png",
    "contributes": {
        "menus": {
            "explorer/context": [
                {
                    "command": "vscode-open-with-vim.openWithVi",
                    "group": "navigation",
                    "when": "filesExplorerFocus"
                },
                {
                    "command": "vscode-open-with-vim.openWithVim",
                    "group": "navigation",
                    "when": "filesExplorerFocus"
                },
                {
                    "command": "vscode-open-with-vim.openWithNano",
                    "group": "navigation",
                    "when": "filesExplorerFocus"
                }
            ]
        },
        "commands": [
            {
                "command": "vscode-open-with-vim.openWithVi",
                "title": "Open with Vi...",
                "enablement": "filesExplorerFocus"
            },
            {
                "command": "vscode-open-with-vim.openWithVim",
                "title": "Open with Vim...",
                "enablement": "filesExplorerFocus"
            },
            {
                "command": "vscode-open-with-vim.openWithNano",
                "title": "Open with Nano...",
                "enablement": "filesExplorerFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.64.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5"
    }
}